<% include partials/header %>

<div id="blog" class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form class="ui form" enctype="multipart/form-data" action="/blogs/<%= blog._id %>?_method=PUT" method="POST"><!--This overrides the POST method of the form, using the method-override package. A PUT request is actually sent-->
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="file" name="displayImage" placeholder="Image">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]"><%= blog.body %></textarea>
        </div>
        <input class="ui violet big basic button" type="submit">
    </form>
</div>

<% include partials/footer %>